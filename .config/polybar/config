; Base: https://framagit.org/gagbo/dotfiles/blob/master/polybar/.config/polybar/config
; need to install font-awesome
; https://fontawesome.com/v4.7/cheatsheet/

[settings]
screenchange-reload = true

[colors]
background = ${xrdb:background:#2b2b2b}
background-alt = ${xrdb:color8:#000}

foreground = ${xrdb:foreground:#dfdfdf}
foreground-alt = ${xrdb:color7:#444}

primary = ${xrdb:color4:#fff}
secondary = ${xrdb:color7:#e60053}
alert = ${xrdb:color1:#bd2c40}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
enable-ipc = true
monitor = ${env:MONITOR:}
width = 100%
height = 44
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true
bottom = false

dpi = 200

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = ${colors.background-alt}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Cantarell:size=10;2"
; font-0 = "Cantarell:size=10:weight=bold;2"
font-1 = "Font Awesome:size=10;2"
font-2 = "Material Icons:size=10;5"
font-3 = "Fira Mono:size=10;-3"

modules-left = exwm-workspace
modules-center = eth pomodoro
modules-right = date battery

; override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/cpu]
type = internal/cpu
interval = 0.2
format-prefix =
format = <label> <ramp-coreload>
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
; label = %percentage:3%%
label =

ramp-coreload-spacing = 1
ramp-coreload-font = 3
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
interval = 2
format = <label> <bar-used>
format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
; label = %percentage_used:2%%

label = M
label-font = 1
