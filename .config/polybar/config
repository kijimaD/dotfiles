[module/battery-combined-tlp]
type = custom/script
exec = ~/bin/battery-combined-tlp.sh
interval = 10
label = %output:1%%
format-underline = ${xrdb:color14:#ffb52a}

[module/info-redshift-temp]
type = custom/script
exec = ~/bin/info-redshift-temp.sh
